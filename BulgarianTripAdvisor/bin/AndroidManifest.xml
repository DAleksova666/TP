<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bulgariantripadvisor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="com.example.bulgariantripadvisor.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.bulgariantripadvisor.HotelsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_hotels" >
        </activity>
        <activity
            android:name="com.example.bulgariantripadvisor.RegisterActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.bulgariantripadvisor.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.bulgariantripadvisor.HotelActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_hotel" >
        </activity>
        <activity
            android:name="com.example.bulgariantripadvisor.CityActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_city" >
        </activity>
        <activity
            android:name="com.example.bulgariantripadvisor.ChooseActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_choose" >
        </activity>
        <activity
            android:name="com.example.bulgariantripadvisor.ThingsToDoActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_things_to_do" >
        </activity>
        <activity
            android:name="com.example.bulgariantripadvisor.ThingActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_thing" >
        </activity>
    </application>

</manifest>